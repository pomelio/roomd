import ext.HttpContext as ctx;
import ext.PathRegexp as pregexp;

let hostname = ctx.hostname();
console('hostname:' + hostname);
let origin = ctx.origin();
console('origin:' + origin);

let ppath = ctx.path();

let abr = pregexp.match('/abc/:id', ppath);
if abr {
	let abid = abr['params']['id'];
	ctx.body('hello world!  - ' + abid);
} else {
	ctx.body('hello world!');
}
